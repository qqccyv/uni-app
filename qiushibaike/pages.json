								"color": "#FFBE71",
								"colorPressed": "#BBBBBB",
								"float": "left",
								"fontSize": "22px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "\ue609"
							},
							{
								"color": "#565656",
								"colorPressed": "#BBBBBB",
								"float": "right",
								"fontSize": "22px",
								"fontSrc": "/static/font/iconfont.ttf",
								"text": "\ue653"
							}
						],
						"searchInput": {
							"align": "center",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "4px",
							"placeholder": "搜索糗事",
							"placeholderColor": "#cccccc",
							"disabled": true
						}
					}
				}
			}
		}

		, {
			"path": "pages/news/news",
			"style" : {
				"app-plus": {
					"scrollIndicator": "none",
					"titleNView": false
				}
			}
		}, {
			"path": "pages/paper/paper",
			"style": {}
		}, {
			"path": "pages/my/my",
			"style": {}
		}, {
			"path": "pages/search/search",
			"style": {
				"app-plus": {
					"scrollIndicator": "none",
					"titleNView": {
						"autoBackButton": false,
						"backgroundColor": "#F7F7F7",
						"buttons": [{
							"color": "#565656",
							"colorPressed": "#BBBBBB",
							"float": "right",
							"fontSize": "16px",
							"text": "取消"
						}],
						"searchInput": {
							"align": "left",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "4px",
							"placeholder": "搜索糗事",
							"placeholderColor": "#cccccc",
							"disabled": false
						}
					}
				}
			}
		}
	    ,{
            "path" : "pages/add-input/add-input",
            "style" : {
				"app-plus": {
					"scrollIndicator": "none",
					"titleNView": false
				}
			}
        }
        ,{
            "path" : "pages/topic-nav/topic-nav",
            "style" : {
				"navigationBarTitleText": "话题分类",
				"app-plus":{
					"bounce":"none"
				}
			}
        }
        ,{
            "path" : "pages/topic-detail/topic-detail",
            "style" : {
				"app-plus":{
					"bounce":"none",
					"scrollIndicator":"none",
					"titleNView":{
						"type":"transparent",
						"buttons":[
							{
								"type":"menu"
							}
						]
					}
				}
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "糗事百科",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF",
		"enablePullDownRefresh": false
	},
	"tabBar": {
		"color": "#333333",
		// "backgroundColor":"#FFFFFF",   // 真机调试时会出现一个多余的底部空白tab框，目前不知具体原因时什么
		"selectedColor": "#f4ea2a",
		"borderStyle": "black",
		"position": "bottom",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/tabbar/index.png",
